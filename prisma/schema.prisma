generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Student Table
model Student {
  id           String    @id @default(cuid())
  name         String
  dateOfBirth  String
  aadharNumber String    @unique
  proctor      Professor @relation(fields: [proctorId], references: [id])
  proctorId    String
}

//Professor table
model Professor {
  id           String    @id @default(cuid())
  name         String
  seniority    Seniority
  aadharNumber String    @unique
  Student      Student[]
}

//Enum for seniority type
enum Seniority {
  JUNIOR
  SENIOR
  ASSOCIATE
  HEAD
}
